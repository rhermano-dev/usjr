</section>

<section>
    <div>
        <link href="~/css/styles.css" rel="stylesheet" />
        <div class="modal-container modal-login-position">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <h1 class="modal-title modal-title-auth fs-5" id="exampleModalLabel">Sign In</h1>
                        <form method="post" action="/Account/Login" asp-antiforgery="true">
                            <div class="mb-3">
                                <label for="UserId" class="form-label">Email</label>
                                <input type="text" id="UserId" class="form-control" asp-for="UserId"
                                    placeholder="Enter userid">
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Password" class="form-label">Password</label>
                                <input type="password" id="Password" class="form-control" asp-for="Password"
                                    placeholder="Enter password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3 form-link">
                                <a class="redirect-forgot-password text-link" style="color:dimgray;"
                                    asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                            </div>
                            <div class="mb-3 form-link">
                                <span style="color:dimgray;">No account?
                                    <a class="redirect-sign-up text-link" asp-controller="Account"
                                        asp-action="Register">Sign up</a>
                                </span>
                            </div>
                            <button type="submit" class="btn btn-primary login-btn">Sign In</button> <a
                                asp-controller="Account" asp-action="Register" class="btn btn-outline-danger"></a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

