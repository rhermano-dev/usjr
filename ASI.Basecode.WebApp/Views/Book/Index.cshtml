@model IEnumerable<ASI.Basecode.WebApp.Models.BookViewModel>

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Name</td>
                <td>@book.AuthorName</td>
                <td>
                    <a href="@Url.Action("Details", "Book", new { id = book.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Book", new { id = book.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Book", new { id = book.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Book")" class="btn btn-primary">Add New Book</a>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@* JQuery Script for deletion (calls delete method in controller as http) *@
<script>
    $(document).ready(function () {
        $(".btn-danger").click(function () {
            var url = $(this).data("url");
            if (confirm("Are you sure you want to delete this book?")) {
                $.post(url, function (data) {
                    location.reload();
                }).fail(function () {
                    alert('Unable to delete.');
                });
            }
        });
    });
</script>

